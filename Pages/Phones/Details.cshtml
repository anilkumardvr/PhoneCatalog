
@page "{id:int}"
@model PhoneCatalog.Pages.Phones.DetailsModel
@{
    var phone = Model.Phone!;
    ViewData["Title"] = $"{phone.Brand} {phone.Model}";
}

<link rel="stylesheet" href="~/css/phone-details.css" asp-append-version="true" />

<section class="phone-details">
    <div class="hero">
        <img src="@phone.ImageUrl" alt="@($"{phone.Brand} {phone.Model}")" class="hero-img" />
        <div class="hero-text">
            <h1>@phone.Brand <span>@phone.Model</span></h1>
            <p class="desc">@phone.Description</p>
            <div class="meta">
                <span class="price">$@phone.Price</span>
                <span class="rating">? @phone.Rating</span>
            </div>
            <a asp-page="/Index" class="back"> Back to list</a>
        </div>
    </div>

    <div class="specs">
        <h2>Highlights</h2>
        <ul>
            <li>Premium build & display</li>
            <li>All-day battery life</li>
            <li>Strong camera performance</li>
            <li>Smooth OS experience</li>
        </ul>
    </div>
</section>
