@page
@model PhoneCatalog.Pages.Phones.IndexModel

<h2 class="page-title">All Phones</h2>

<div class="grid">
@foreach (var p in Model.Items)
{
    <a class="card" asp-page="/Phones/Details" asp-route-id="@p.Id">
        <div class="thumb">
            <img src="@p.ImageUrl" alt="@($"{p.Brand} {p.Model}")" loading="lazy" />
        </div>
        <div class="meta">
            <div class="name">@p.Brand @p.Model</div>
            <div class="price">$@p.Price</div>
            <div class="rating">â˜… @p.Rating.ToString("0.0")</div>
        </div>
    </a>
}
</div>
